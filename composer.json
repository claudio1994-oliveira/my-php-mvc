{
    "name": "claud/my-php-mvc",
    "description": "Small PHP MVC framework",
    "type": "project",
    "license": "MIT",
    "version": "0.x.x",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": ">8.0",
        "ext-pdo": "*",
        "php-di/php-di": "^6.4.0",
        "claud/router": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit":  "^10.1"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}